# After Dark Systems Change Management - Environment Configuration
# Copy this file to .env and update values

# Server Configuration
ADSOPS_ENVIRONMENT=development
ADSOPS_PORT=8080
ADSOPS_LOG_LEVEL=debug

# Database Configuration (PostgreSQL)
ADSOPS_DATABASE_HOST=localhost
ADSOPS_DATABASE_PORT=5432
ADSOPS_DATABASE_USER=adsops
ADSOPS_DATABASE_PASSWORD=your_secure_password
ADSOPS_DATABASE_DBNAME=adsops_changes
ADSOPS_DATABASE_SSLMODE=disable
ADSOPS_DATABASE_MAX_OPEN_CONNS=25
ADSOPS_DATABASE_MAX_IDLE_CONNS=5

# Redis Configuration
ADSOPS_REDIS_HOST=localhost
ADSOPS_REDIS_PORT=6379
ADSOPS_REDIS_PASSWORD=
ADSOPS_REDIS_DB=0

# JWT Configuration
ADSOPS_JWT_SECRET_KEY=your_secure_jwt_secret_key_min_32_chars
ADSOPS_JWT_ACCESS_TOKEN_DURATION=15
ADSOPS_JWT_REFRESH_TOKEN_DURATION=7
ADSOPS_JWT_ISSUER=changes.afterdarksys.com

# OAuth2 - After Dark Central Auth
ADSOPS_OAUTH2_AFTERDARK_CLIENT_ID=your_client_id
ADSOPS_OAUTH2_AFTERDARK_CLIENT_SECRET=your_client_secret
ADSOPS_OAUTH2_AFTERDARK_REDIRECT_URL=https://changes.afterdarksys.com/auth/callback/afterdark
ADSOPS_OAUTH2_AFTERDARK_AUTH_URL=https://auth.afterdarksys.com/oauth2/authorize
ADSOPS_OAUTH2_AFTERDARK_TOKEN_URL=https://auth.afterdarksys.com/oauth2/token
ADSOPS_OAUTH2_AFTERDARK_USERINFO_URL=https://auth.afterdarksys.com/oauth2/userinfo
ADSOPS_OAUTH2_AFTERDARK_SCOPES=openid,profile,email

# OAuth2 - Google
ADSOPS_OAUTH2_GOOGLE_CLIENT_ID=your_google_client_id
ADSOPS_OAUTH2_GOOGLE_CLIENT_SECRET=your_google_client_secret
ADSOPS_OAUTH2_GOOGLE_REDIRECT_URL=https://changes.afterdarksys.com/auth/callback/google
ADSOPS_OAUTH2_GOOGLE_AUTH_URL=https://accounts.google.com/o/oauth2/v2/auth
ADSOPS_OAUTH2_GOOGLE_TOKEN_URL=https://oauth2.googleapis.com/token
ADSOPS_OAUTH2_GOOGLE_USERINFO_URL=https://openidconnect.googleapis.com/v1/userinfo
ADSOPS_OAUTH2_GOOGLE_SCOPES=openid,profile,email

# AWS Configuration
ADSOPS_AWS_REGION=us-east-1
ADSOPS_AWS_ACCESS_KEY_ID=
ADSOPS_AWS_SECRET_ACCESS_KEY=
ADSOPS_AWS_S3_BUCKET=adsops-changes-attachments
ADSOPS_AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/adsops-notifications

# Email Configuration (SES)
ADSOPS_EMAIL_FROM=noreply@changes.afterdarksys.com
ADSOPS_EMAIL_REPLY_TO=support@afterdarksys.com
ADSOPS_EMAIL_BASE_URL=https://changes.afterdarksys.com
ADSOPS_EMAIL_COMPANY_NAME=After Dark Systems
